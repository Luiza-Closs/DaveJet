<div class="main">
    <div class="container p-5">
        <h1>Adicionar Aluno</h1>
    <form action="/cadastroAluno" method="post">
        <input type="number" value="<%= id_usuario %>" hidden name="id_coordenacao" id="id_coordenacao">
        <div>
            <h6 for="nome">Nome:</h6>
            <input class="form-control" type="text" id="nome" name="nome" placeholder="Digite aqui...">
        </div>
        <div>
            <h6 for="turma">Turma</h6>
            <select class="form-control" name="id_turma" id="id_turma">
                <% turmas.forEach (turma => { %>
                    <option value="<%=turma.id_turma %>"><%= turma.nome %></option>
                <% }); %>    
            </select>
        </div>
        <br>
        <div>
            <button class="btn btn-cadastrar" type="submit">Adicionar</button>
        </div>
    </form>
    </div>
</div>
