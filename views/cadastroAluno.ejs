<%- include('layout/cadastrado/header') %>
<div class="container">
    <form action="/cadastroAluno" method="post">
        <div>
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Digite aqui...">
        </div>
        <div>
            <label for="turma">Turma</label>
            <select name="id_turma" id="id_turma">
                <% turmas.forEach (turma => { %>
                    <option value="<%=turma.id_turma %>"><%= turma.nome %></option>
                <% }); %>    
            </select>
        </div>
        <div>
            <button type="submit">Adicionar</button>
        </div>
    </form>
</div>
<%- include('layout/cadastrado/footer') %>
