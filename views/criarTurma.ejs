            <div>
                <h6 for="nome">Nome:</h6>
                <input class="form-control" type="text" id="nome" name="nome" placeholder="Digite aqui...">
            </div>
            <div>
                <h6 for="turma">Fase:</h6>
                <select class="form-control" name="fase" id="fase">
                    <option value="'primeiro'"> primeiro ano </option>
                    <option value="'segundo'"> segundo ano </option>
                    <option value="'terceiro'"> terceiro ano </option>
                    <option value="'quarto'"> quarto ano </option>
                </select>
            </div>
            <br>
            <div>
                <button class="btn btn-cadastrar" type="submit">Adicionar</button>
            </div>
        </form>
